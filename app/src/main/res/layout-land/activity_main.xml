<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ce61" >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/cytryna" />

    <TextView
        android:id="@+id/L01"
        android:layout_marginTop="@dimen/margin_top_size_1st_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="Ą" />

    <TextView
        android:id="@+id/L02"
        android:layout_marginTop="@dimen/margin_top_size_1st_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="400dp"
        android:textStyle="bold"
        android:text="Ź" />
    <TextView
        android:id="@+id/L03"
        android:layout_marginTop="@dimen/margin_top_size_1st_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:textStyle="bold"
        android:text="Ć" />

    <TextView
        android:id="@+id/L04"
        android:layout_marginTop="@dimen/margin_top_size_1st_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="600dp"
        android:textStyle="bold"
        android:text="D" />

    <!-- 3-co rząd -->
    <TextView
        android:id="@+id/L05"
        android:layout_marginTop="@dimen/margin_top_size_2nd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="300dp"
        android:textStyle="bold"
        android:text="E" />

    <TextView
        android:id="@+id/L06"
        android:layout_marginTop="@dimen/margin_top_size_2nd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="400dp"
        android:textStyle="bold"
        android:text="F" />

    <TextView
        android:id="@+id/L07"
        android:layout_marginTop="@dimen/margin_top_size_2nd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="500dp"
        android:textStyle="bold"
        android:text="G" />

    <TextView
        android:id="@+id/L08"
        android:layout_marginTop="@dimen/margin_top_size_2nd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="600dp"
        android:textStyle="bold"
        android:text="H" />

    <!-- 3-co rząd -->
    
    <TextView
        android:id="@+id/L09"
        android:layout_marginTop="@dimen/margin_top_size_3rd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="300dp"
        android:textStyle="bold"
        android:text="I" />

    <TextView
        android:id="@+id/L10"
        android:layout_marginTop="@dimen/margin_top_size_3rd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="400dp"
        android:textStyle="bold"
        android:text="J" />

    <TextView
        android:id="@+id/L11"
        android:layout_marginTop="@dimen/margin_top_size_3rd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="500dp"
        android:textStyle="bold"
        android:text="K" />

    <TextView
        android:id="@+id/L12"
        android:layout_marginTop="@dimen/margin_top_size_3rd_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/litera_size"
        android:padding="@dimen/padding_ski"
        android:layout_marginLeft="600dp"
        android:textStyle="bold"
        android:text="L" />


<!-- Prostokat - Obszar -->
    <LinearLayout
        android:id="@+id/l_Obszar"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_skib"

        >

    </LinearLayout>




<!-- Kontrolki 'kontrolne' -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Wspolrzedne Kontrolki" />

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvInfo"
        android:text="Wspolrzedne Palca"/>

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tvInfo1"
        android:layout_marginLeft="50dp"
        android:text="Wspolrzedne Litery" />

    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tvInfo2"
        android:layout_marginLeft="50dp"
        android:text="Rozdzielczosc" />

    <Button
        android:id="@+id/bZnowu"
        android:onClick="bZnowuOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:text="\@" />

    <Button
        android:id="@+id/bUpperLower"
        android:onClick="bUpperLowerOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/bZnowu"
        android:layout_marginBottom="8dp"
        android:text="UpLoCase" />

</RelativeLayout>


